@model System.Linq.IQueryable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Role Management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center"> No Roles Found</td></tr>
    <a class="btn btn-primary" asp-action="AddRole">Add New Role</a>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="Role Management">
        <tr>
            <th>Role Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>

        @foreach (var role in Model)
        {
    <tr>
        <td>@role.Id</td>
        <td>@role.Name</td>
        <td>
            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="UpdateRole"
                   asp-route-id="@role.Id">Edit</a>
                <button type="submit" class="btn btn-sm btn-primary"
                        onclick="return confirm('Are You sure to Delete this role')">
                    Delete
                </button>
            </form>
        </td>
    </tr>

        }

    </table>

    <a class="btn btn-primary" asp-action="AddRole">Add New Role</a>
}
