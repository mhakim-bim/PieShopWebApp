@model Microsoft.AspNetCore.Identity.IdentityRole

<h2>Create New Role</h2>
<form asp-controller="Admin" asp-action="AddRole" method="post" role="form" class="form-horizontal">
    <h4>Enter Role Details Below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create New Role" />
        </div>
    </div>

</form> 